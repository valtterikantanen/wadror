<h1>Beers</h1>

<div id="beers">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Beer</th>
        <th>Style</th>
        <th>Brewery</th>
        <th>Rating</th>
      </tr>
    </thead>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= link_to beer.style, beer.style %></td>
        <td><%= link_to beer.brewery, beer.brewery %></td>
        <td><%= "%0.2f" % [beer.average_rating] %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New beer", new_beer_path if current_user %>

<p><%= link_to "List of breweries", breweries_path %></p>