    <%= form.label :year, { class: "form-label" } %>
    <%= form.number_field :year, { class: "form-control" } %>
  </div>

  <div class="mb-1 form-check">
    <%= form.label :active, { class: "form-check-label" } %>
    <%= form.check_box :active, { class: "form-check-input" } %>
